{
    "manifest_version": 3,
    "name": "Two-Line Eval Bar for Chess.com",
    "description": "An eval bar that shows the difference between playing the best and second-best move on any given move. Perfect for intense only-move sequences, especially for pro tournaments!",
    "version": "0.0.5", 
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },  
    "content_scripts": [
        {
            "js": ["contentScript.js"],
            "matches": [
                "https://www.chess.com/events/*",
                "https://www.chess.com/game/live/*",
                "https://www.chess.com/*",
                "https://www.chess.com/analysis?tab=analysis",
                "https://www.chess.com/analysis",
                "https://www.chess.com/analysis/game/live/*"
            ]
        }
    ]
}
